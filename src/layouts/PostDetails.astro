---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime";
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@utils/slugify";
import { SITE } from "@config";
import { slug } from "github-slugger";

export interface Props {
  post: CollectionEntry<"blog">;
  prev?: CollectionEntry<"blog">| null; // 添加前一篇文章的属性
  next?: CollectionEntry<"blog">| null; // 添加后一篇文章的属性
}

const { post,next,prev } = Astro.props;

const {
  title,
  author,
  description,
  ogImage,
  canonicalURL,
  pubDatetime,
  modDatetime,
  tags,
} = post.data;

const { Content } = await post.render();

const ogImageUrl = typeof ogImage === "string" ? ogImage : ogImage?.src;
const ogUrl = new URL(
  ogImageUrl ?? `/posts/${slugifyStr(title)}.png`,
  Astro.url.origin
).href;

const layoutProps = {
  title: `${title} | ${SITE.title}`,
  author,
  description,
  pubDatetime,
  modDatetime,
  canonicalURL,
  ogImage: ogUrl,
  scrollSmooth: true,
};
---

<Layout {...layoutProps}>
  <Header />
  <main id="main-content" class="content">
    <Datetime
      pubDatetime={pubDatetime}
      modDatetime={modDatetime}
      className="post-date"
    />
    <h1 transition:name={slugifyStr(post.slug)} class="post-title">{title}</h1>
    <article id="article" role="article" class="post-content">
      <Content />
    </article>
    {(prev || next) && (  // 这里添加条件来检查是否有上下篇
      <div class="related-post">
        <div class="prev-post">
        {prev && (
            <a href={`/posts/${prev.slug}`}>
              <svg xmlns="http://www.w3.org/2000/svg" class='prev-svg'>
              <path d="M12.707 17.293 8.414 13H18v-2H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707z" />
            </svg>
           上一篇：{prev.data.title}
          </a>
        )}
        </div>
        <div class="next-post">
          {next && (
            <a href={`/posts/${next.slug}`}>
              下一篇：{next.data.title}
              <svg xmlns="http://www.w3.org/2000/svg" class='next-svg'>
                <path d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z" />
              </svg>
            </a>
          )}
        </div>
      </div>
    )}

    <div class="comment">
      <script src="https://giscus.app/client.js"
        data-repo="pagecho/pagecho.github.io"
        data-repo-id="R_kgDOL1JbLQ"
        data-category="Ideas"
        data-category-id="DIC_kwDOL1JbLc4CgTn7"
        data-mapping="url"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="bottom"
        data-theme="https://frynut.com/src/styles/comment.css"
        data-lang="zh-CN"
        data-loading="lazy"
        crossorigin="anonymous"
        async>
      </script>
    </div>
  </main>
  <Footer />
</Layout>

